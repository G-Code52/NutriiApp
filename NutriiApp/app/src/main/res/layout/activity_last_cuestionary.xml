<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".LastCuestionaryActivity">

    <Button
        android:id="@+id/btnContinuar6"
        android:layout_width="@dimen/btnLargo"
        android:layout_height="@dimen/btnAlto"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/RosaBotones"
        android:text="@string/btnContinuar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMonto">

        <RadioButton
            android:id="@+id/cbMenu1"
            android:layout_width="@dimen/EdtCuestionarioLargo"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/UnMenuMes"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/cbMenu2"
            android:layout_width="@dimen/EdtCuestionarioLargo"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/MenuDosSemana"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/cbMenu3"
            android:layout_width="@dimen/EdtCuestionarioLargo"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/MenuLaSemana"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/edtMonto"
        android:layout_width="@dimen/EdtCuestionarioLargo"
        android:layout_height="@dimen/EdtCuestionarioAlto"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/Monto"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMontoPlan2" />

    <TextView
        android:id="@+id/txtMontoPlan2"
        android:layout_width="@dimen/EdtCuestionarioLargo"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/InstruccionMonto"
        android:textColor="@color/RosaNutriapp"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDisgusto" />

    <EditText
        android:id="@+id/edtDisgusto"
        android:layout_width="@dimen/EdtCuestionarioLargo"
        android:layout_height="@dimen/EdtCuestionarioAlto"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/AlimentosDisgusto"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtIntolerante" />

    <EditText
        android:id="@+id/edtIntolerante"
        android:layout_width="@dimen/EdtCuestionarioLargo"
        android:layout_height="@dimen/EdtCuestionarioAlto"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/AlimentosIntolerantes"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtComidasDia" />

    <EditText
        android:id="@+id/edtComidasDia"
        android:layout_width="@dimen/EdtCuestionarioLargo"
        android:layout_height="@dimen/EdtCuestionarioAlto"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/ComidasDia"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHabitos" />

    <TextView
        android:id="@+id/txtHabitos"
        android:layout_width="@dimen/EdtCuestionarioLargo"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/HabitosAlimenticios"
        android:textColor="@color/RosaNutriapp"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>